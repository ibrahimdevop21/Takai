---
export interface Props {
  isOpen?: boolean;
  class?: string;
}

const { isOpen = false, class: className = '' } = Astro.props;
---

<button
  class:list={[
    'text-white hover:text-[#cfb063] p-3 rounded-lg border-2 border-white shadow-lg bg-[#01407a] focus:outline-none focus:ring-2 focus:ring-[#cfb063]/50 transition-all duration-200',
    className
  ]}
  id="mobile-menu-button"
  data-mobile-menu-button
  aria-label="Toggle menu"
  aria-expanded={isOpen}
  type="button"
>
  <div class="burger-container">
    <span class="burger-line top"></span>
    <span class="burger-line middle"></span>
    <span class="burger-line bottom"></span>
  </div>
</button>

<style>
  .burger-container {
    width: 24px;
    height: 18px;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .burger-line {
    width: 100%;
    height: 2px;
    background-color: white;
    border-radius: 1px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    transform-origin: center;
  }

  /* Hamburger to X animation */
  #mobile-menu-button.menu-open .burger-line.top {
    transform: translateY(8px) rotate(45deg);
  }

  #mobile-menu-button.menu-open .burger-line.middle {
    opacity: 0;
    transform: scaleX(0);
  }

  #mobile-menu-button.menu-open .burger-line.bottom {
    transform: translateY(-8px) rotate(-45deg);
  }

  /* Hover effects */
  #mobile-menu-button:hover .burger-line {
    background-color: #cfb063;
  }

  #mobile-menu-button.menu-open:hover .burger-line {
    background-color: white;
  }
</style>
