---
import { Icon } from 'astro-icon/components';
import LogoLight from '~/components/common/LogoLight.astro';

export interface Props {
  links: Array<{
    text?: string;
    href?: string;
    ariaLabel?: string;
    icon?: string;
    links?: Array<{
      text?: string;
      href?: string;
      ariaLabel?: string;
      icon?: string;
    }>;
  }>;
  actions: Array<{
    text?: string;
    href?: string;
    variant?: string;
    target?: string;
    icon?: string;
    class?: string;
  }>;
  isOpen?: boolean;
  class?: string;
}

const { links = [], actions = [], isOpen = false, class: className = '' } = Astro.props;
---

<!-- Mobile Navigation Menu -->
<nav
  id="mobile-menu"
  class:list={[
    'absolute top-full left-0 right-0 z-50 lg:hidden bg-[#01407a] border-t border-[#cfb063]/20 shadow-lg',
    isOpen ? 'block' : 'hidden',
    className
  ]}
  aria-label="Mobile navigation"
>
  <!-- Navigation Content -->
  <div class="py-2">
    <!-- Main Navigation -->
    <ul class="space-y-0">
      {
        links.map(({ text, href, links: subLinks }) => (
          <li>
            {subLinks?.length ? (
              <div class="nav-dropdown">
                <button
                  type="button"
                  class="nav-dropdown-trigger nav-item flex items-center justify-between w-full px-4 py-3 text-left text-white hover:bg-white/10 focus:bg-white/10 transition-colors duration-200 font-semibold border-b border-[#cfb063]/10"
                  aria-expanded="false"
                >
                  <span>{text}</span>
                  <svg class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </button>
                <div class="nav-dropdown-content hidden overflow-hidden transition-all duration-300 ease-in-out max-h-0 bg-white/5 border-l-2 border-[#cfb063]/30">
                  <ul class="py-1">
                    {subLinks.map(({ text: subText, href: subHref }) => (
                      <li>
                        <a
                          href={subHref}
                          class="nav-item block px-6 py-2 text-white/90 hover:text-white hover:bg-white/10 transition-colors duration-200 border-b border-[#cfb063]/5"
                        >
                          {subText}
                        </a>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            ) : (
              <a
                href={href}
                class="nav-item block px-4 py-3 text-white hover:bg-white/10 focus:bg-white/10 transition-colors duration-200 font-semibold border-b border-[#cfb063]/10"
              >
                {text}
              </a>
            )}
          </li>
        ))
      }
    </ul>

    <!-- Actions -->
    {actions.length > 0 && (
      <div class="border-t border-[#cfb063]/20 p-6">
        <div class="space-y-3">
          {actions.map(({ text, href }) => (
            <a
              href={href}
              class="block w-full py-3 px-6 text-center bg-[#cfb063] text-[#01407a] font-semibold rounded-lg hover:bg-[#cfb063]/90 focus:outline-none focus:ring-2 focus:ring-[#cfb063]/50 transition-all duration-200"
            >
              {text}
            </a>
          ))}
        </div>
      </div>
    )}
  </div>
</nav>

<!-- Backdrop -->
<div
  id="mobile-backdrop"
  class:list={[
    'fixed inset-0 bg-black/60 z-[9998] lg:hidden transition-all duration-500 ease-[cubic-bezier(0.19,1,0.22,1)]',
    isOpen ? 'opacity-100' : 'opacity-0 pointer-events-none'
  ]}
  aria-hidden="true"
></div>

<style>
  /* Dropdown animations */
  .nav-dropdown-trigger[aria-expanded="true"] .tabler-chevron-down {
    transform: rotate(180deg);
  }

  .nav-dropdown-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-in-out;
  }

  .nav-dropdown-content.open {
    max-height: 500px;
  }

  /* Smooth scrolling for mobile menu */
  #mobile-menu {
    overscroll-behavior: contain;
  }

  /* Focus styles */
  .nav-item:focus {
    outline: 2px solid #cfb063;
    outline-offset: -2px;
  }
</style>

