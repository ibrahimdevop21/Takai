---
import { Icon } from 'astro-icon/components';
import LogoLight from '~/components/common/LogoLight.astro';

export interface Props {
  links: Array<{
    text?: string;
    href?: string;
    ariaLabel?: string;
    icon?: string;
    links?: Array<{
      text?: string;
      href?: string;
      ariaLabel?: string;
      icon?: string;
    }>;
  }>;
  actions: Array<{
    text?: string;
    href?: string;
    variant?: string;
    target?: string;
    icon?: string;
    class?: string;
  }>;
  isOpen?: boolean;
  class?: string;
}

const { links = [], actions = [], isOpen = false, class: className = '' } = Astro.props;
---

<!-- Mobile Navigation Menu -->
<nav
  id="mobile-menu"
  class:list={[
    'fixed top-0 right-0 h-full w-80 bg-[#01407a] text-white transform translate-x-full transition-transform duration-300 ease-in-out z-[9999] lg:hidden',
    className
  ]}
  aria-label="Mobile navigation"
>
  <!-- Navigation Content -->
  <div class="py-8 px-4 h-full overflow-y-auto">
    <!-- Main Navigation -->
    <ul class="space-y-0">
      {
        links.map(({ text, href, links: subLinks }) => (
          <li>
            <a
              href={href}
              class="nav-item block px-4 py-3 text-white/90 hover:text-[#cfb063] hover:bg-white/10 focus:bg-white/10 transition-colors duration-200 font-medium border-b border-[#cfb063]/10"
            >
              {text}
            </a>
          </li>
        ))
      }
    </ul>

    <!-- Actions -->
    {actions.length > 0 && (
      <div class="border-t border-[#cfb063]/20 p-6">
        <div class="space-y-3">
          {actions.map(({ text, href }) => (
            <a
              href={href}
              class="block w-full py-3 px-6 text-center bg-[#cfb063] text-[#01407a] font-semibold rounded-lg hover:bg-[#cfb063]/90 focus:outline-none focus:ring-2 focus:ring-[#cfb063]/50 transition-all duration-200"
            >
              {text}
            </a>
          ))}
        </div>
      </div>
    )}
  </div>
</nav>

<!-- Backdrop -->
<div
  id="mobile-backdrop"
  class:list={[
    'fixed inset-0 bg-black/60 z-[9998] lg:hidden transition-all duration-500 ease-[cubic-bezier(0.19,1,0.22,1)]',
    isOpen ? 'opacity-100' : 'opacity-0 pointer-events-none'
  ]}
  aria-hidden="true"
></div>

<style>
  /* Dropdown animations */
  .nav-dropdown-trigger[aria-expanded="true"] .tabler-chevron-down {
    transform: rotate(180deg);
  }

  .nav-dropdown-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-in-out;
  }

  .nav-dropdown-content.open {
    max-height: 500px;
  }

  /* Smooth scrolling for mobile menu */
  #mobile-menu {
    overscroll-behavior: contain;
  }

  /* Focus styles */
  .nav-item:focus {
    outline: 2px solid #cfb063;
    outline-offset: -2px;
  }
</style>

