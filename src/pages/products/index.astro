---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Products - TAKAI Paint Protection Films',
  description: 'Discover TAKAI\'s premium paint protection film solutions designed to keep your vehicle looking pristine.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    tagline="Premium Protection"
    title="TAKAI Paint Protection Films"
    subtitle="Advanced automotive protection films engineered for superior performance and crystal-clear finish."
    actions={[
      { text: 'View Premium', href: '/products/premium', variant: 'primary' },
      { text: 'View Premium Plus', href: '/products/premium-plus', variant: 'secondary' },
    ]}
  />

  <!-- Product Overview -->
  <Features
    id="products-overview"
    title="Our Product Lines"
    subtitle="Choose the perfect protection for your vehicle"
    items={[
      {
        title: 'TAKAI Premium',
        description: 'Professional-grade paint protection film with excellent clarity and self-healing properties.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'TAKAI Premium Plus',
        description: 'Our flagship product featuring advanced hydrophobic coating and enhanced durability.',
        icon: 'tabler:diamond',
      },
      {
        title: 'Professional Installation',
        description: 'Expert installation by certified technicians ensures perfect fit and finish.',
        icon: 'tabler:tools',
      },
    ]}
  />

  <!-- Technology Section -->
  <Content
    isReversed
    title="Advanced Film Technology"
    subtitle="Innovation in Every Layer"
    items={[
      {
        title: 'Self-Healing Properties',
        description: 'Minor scratches and swirl marks disappear with heat application.',
      },
      {
        title: 'Crystal Clear Finish',
        description: 'Maintains the original paint color and gloss without yellowing.',
      },
      {
        title: 'Long-Term Protection',
        description: 'Protects against rock chips, scratches, and environmental damage.',
      },
    ]}
  />

  <!-- Call to Action -->
  <CallToAction
    title="Ready to Protect Your Vehicle?"
    subtitle="Find a certified TAKAI installer near you"
    actions={[
      {
        variant: 'primary',
        text: 'Find Distributors',
        href: '/distributors',
      },
      {
        text: 'Contact Us',
        href: '/contact',
      },
    ]}
  />
</Layout>
