---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'TAKAI Premium Plus - Ultimate Paint Protection Film',
  description: 'TAKAI Premium Plus is our flagship paint protection film featuring advanced hydrophobic coating and enhanced durability.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    tagline="Flagship Product"
    title="TAKAI Premium Plus"
    subtitle="Our most advanced paint protection film featuring hydrophobic coating, enhanced durability, and superior self-healing technology."
    actions={[
      { text: 'Find Installer', href: '/distributors', variant: 'primary' },
      { text: 'Compare Products', href: '/products', variant: 'secondary' },
    ]}
  />

  <!-- Product Stats -->
  <Stats
    title="Premium Plus Performance"
    stats={[
      { title: 'Thickness', amount: '9.5 mil' },
      { title: 'Warranty', amount: '12 years' },
      { title: 'Light Transmission', amount: '99.5%' },
      { title: 'Self-Healing', amount: 'Up to 70Â°C' },
    ]}
  />

  <!-- Key Features -->
  <Features
    id="premium-plus-features"
    title="Premium Plus Features"
    subtitle="The ultimate in paint protection technology"
    items={[
      {
        title: 'Hydrophobic Coating',
        description: 'Advanced water-repelling surface keeps your vehicle cleaner longer and makes washing easier.',
        icon: 'tabler:droplet-off',
      },
      {
        title: 'Enhanced Self-Healing',
        description: 'Superior self-healing properties work at lower temperatures for faster recovery.',
        icon: 'tabler:refresh',
      },
      {
        title: 'Maximum Clarity',
        description: 'Industry-leading optical clarity with 99.5% light transmission for invisible protection.',
        icon: 'tabler:eye-check',
      },
      {
        title: 'Superior Durability',
        description: 'Enhanced film construction provides maximum protection against impacts and abrasions.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Stain Resistance',
        description: 'Advanced surface treatment prevents staining from environmental contaminants.',
        icon: 'tabler:shield-x',
      },
      {
        title: 'Extended Warranty',
        description: '12-year comprehensive warranty covers yellowing, cracking, and peeling.',
        icon: 'tabler:certificate',
      },
    ]}
  />

  <!-- Advanced Technology -->
  <Content
    isReversed
    title="Advanced Technology"
    subtitle="Innovation at Every Layer"
    items={[
      {
        title: 'Multi-Layer Construction',
        description: 'Proprietary multi-layer design with enhanced topcoat for superior performance.',
      },
      {
        title: 'Nano-Technology',
        description: 'Nano-structured surface provides self-cleaning properties and enhanced durability.',
      },
      {
        title: 'Advanced Adhesive',
        description: 'Pressure-sensitive adhesive allows for repositioning during installation.',
      },
    ]}
  />

  <!-- Benefits Comparison -->
  <Features
    id="benefits"
    title="Premium Plus Advantages"
    subtitle="Why choose our flagship product"
    items={[
      {
        title: 'Easier Maintenance',
        description: 'Hydrophobic coating reduces dirt adhesion and makes cleaning effortless.',
        icon: 'tabler:wash',
      },
      {
        title: 'Enhanced Protection',
        description: 'Thicker construction provides superior impact and scratch resistance.',
        icon: 'tabler:shield-plus',
      },
      {
        title: 'Longer Lifespan',
        description: 'Advanced materials and construction ensure longer-lasting protection.',
        icon: 'tabler:clock-plus',
      },
      {
        title: 'Professional Grade',
        description: 'Designed for the most demanding applications and discerning customers.',
        icon: 'tabler:award',
      },
    ]}
  />

  <!-- Applications -->
  <Content
    title="Ideal For"
    subtitle="Perfect for premium applications"
    items={[
      {
        title: 'Exotic Supercars',
        description: 'Ultimate protection for the most valuable and exclusive vehicles.',
      },
      {
        title: 'Show Cars',
        description: 'Maintain pristine appearance for concours and exhibition vehicles.',
      },
      {
        title: 'High-End Luxury',
        description: 'Preserve the investment in premium luxury automobiles.',
      },
    ]}
  />

  <!-- Call to Action -->
  <CallToAction
    title="Experience Ultimate Protection"
    subtitle="Get TAKAI Premium Plus installed by certified professionals"
    actions={[
      {
        variant: 'primary',
        text: 'Find Installer',
        href: '/distributors',
      },
      {
        text: 'Contact Us',
        href: '/contact',
      },
    ]}
  />
</Layout>
