---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'TAKAI Premium - Professional Paint Protection Film',
  description: 'TAKAI Premium offers professional-grade paint protection with self-healing technology and crystal-clear finish.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    tagline="Professional Grade"
    title="TAKAI Premium"
    subtitle="Professional-grade paint protection film engineered for superior clarity and self-healing performance."
    actions={[
      { text: 'Find Installer', href: '/distributors', variant: 'primary' },
      { text: 'Compare Products', href: '/products', variant: 'secondary' },
    ]}
  />

  <!-- Product Stats -->
  <Stats
    title="Premium Performance"
    stats={[
      { title: 'Thickness', amount: '8.5 mil' },
      { title: 'Warranty', amount: '10 years' },
      { title: 'Light Transmission', amount: '99%' },
      { title: 'Self-Healing', amount: 'Up to 80°C' },
    ]}
  />

  <!-- Key Features -->
  <Features
    id="premium-features"
    title="Premium Features"
    subtitle="Advanced protection technology"
    items={[
      {
        title: 'Self-Healing Technology',
        description: 'Micro-scratches and swirl marks disappear with heat application, keeping your paint looking new.',
        icon: 'tabler:refresh',
      },
      {
        title: 'Crystal Clear Finish',
        description: 'Maintains original paint color and gloss without yellowing or hazing over time.',
        icon: 'tabler:eye',
      },
      {
        title: 'Impact Resistance',
        description: 'Protects against rock chips, road debris, and minor impacts.',
        icon: 'tabler:shield',
      },
      {
        title: 'UV Protection',
        description: 'Blocks harmful UV rays to prevent paint fading and oxidation.',
        icon: 'tabler:sun',
      },
      {
        title: 'Chemical Resistance',
        description: 'Resists staining from bird droppings, tree sap, and road chemicals.',
        icon: 'tabler:flask',
      },
      {
        title: 'Easy Maintenance',
        description: 'Smooth surface makes cleaning easier and reduces dirt accumulation.',
        icon: 'tabler:wash',
      },
    ]}
  />

  <!-- Technical Specifications -->
  <Content
    isReversed
    title="Technical Specifications"
    subtitle="Engineered for Performance"
    items={[
      {
        title: 'Film Construction',
        description: 'Multi-layer thermoplastic urethane with advanced adhesive system.',
      },
      {
        title: 'Installation Method',
        description: 'Wet application with repositionable adhesive for perfect fit.',
      },
      {
        title: 'Temperature Range',
        description: 'Performs in temperatures from -40°F to 200°F (-40°C to 93°C).',
      },
    ]}
  />

  <!-- Applications -->
  <Features
    id="applications"
    title="Ideal Applications"
    subtitle="Perfect for various vehicle types"
    items={[
      {
        title: 'Luxury Vehicles',
        description: 'Preserve the value and appearance of high-end automobiles.',
        icon: 'tabler:car-suv',
      },
      {
        title: 'Sports Cars',
        description: 'Protect performance vehicles from track and street hazards.',
        icon: 'tabler:car',
      },
      {
        title: 'Daily Drivers',
        description: 'Keep everyday vehicles looking pristine with minimal maintenance.',
        icon: 'tabler:car',
      },
    ]}
  />

  <!-- Call to Action -->
  <CallToAction
    title="Protect Your Investment"
    subtitle="Get TAKAI Premium installed by certified professionals"
    actions={[
      {
        variant: 'primary',
        text: 'Find Installer',
        href: '/distributors',
      },
      {
        text: 'Contact Us',
        href: '/contact',
      },
    ]}
  />
</Layout>
